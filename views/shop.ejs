<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('partials/header') %>
    <main class="shop-main">
        <h1 class="shop-title">Echo Shop</h1>
        <div class="shop-container">
            <aside class="categories">
                <ul>
                    <li><a href="#" class="category-link" data-category="all">All</a></li>
                    <% categories.forEach(category => { %>
                    <li><a href="#" class="category-link" data-category="<%= category.name %>"><%= category.name %></a></li>
                    <% }) %>
                </ul>
            </aside>
            <div class="products-container">
                <div class="products">
                    <% products.forEach(product => { %>
                        <div class="product" data-id="<%= product._id %>">
                            <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
                            <h2><%= product.name %></h2>
                            <p class="price">$<%= product.price %></h1>
                            <p class="description"><%= product.description %></p>
                            <button class="add-to-cart" data-id="<%= product._id %>">Add to Cart</button>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </main>

    <!-- Modal -->
    <div id="productModal" class="product-modal">
        <div class="product-modal-content">
            <span class="close">&times;</span>
            <div class="modal-body">
                <img id="modalImage" src="" alt="Product Image" style="width: 40%; float: left; margin-right: 20px;">
                <h2 id="modalTitle"></h2>
                <p id="modalPrice"></p>
                <p id="modalDescription"></p>
                <button id="modalAddToCart">Add to Cart</button>
            </div>
        </div>
    </div>


    

    <script src="/js/shop.js"></script>
    <script src="/js/header.js"></script>
</body>
</html>
