<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Image Upload Test</title>
</head>
<body>
    <form id="test-upload-form" method="POST" action="/test-upload" enctype="multipart/form-data">
        <input type="file" id="test-image" name="test-image" accept="image/*">
        <button type="submit">Upload</button>
    </form>
    <script>
        document.getElementById('test-upload-form').addEventListener('submit', function (e) {
            e.preventDefault();
            const formData = new FormData(this);
            fetch('/test-upload', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                console.log('Response from server:', data);
            })
            .catch(error => {
                console.error('Error:', error);
            });
        });
    </script>
</body>
</html>
